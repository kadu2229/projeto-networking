<h2 style="text-align:center;">{{#if reuniao}}Editar Reunião{{else}}Nova Reunião{{/if}}</h2>

<form action="/admin/reunioes/nova" method="POST" style="max-width:500px;margin:auto;background:white;padding:1.5rem;border-radius:8px;">
  <label for="titulo">Título:</label>
  <input type="text" id="titulo" name="titulo" value="{{reuniao.titulo}}" required style="width:100%;margin-bottom:1rem;">

  <label for="datahora">Data e Hora:</label>
  <input type="datetime-local" id="datahora" name="datahora" value="{{reuniao.datahora}}" required style="width:100%;margin-bottom:1rem;">

  <label for="local">Local:</label>
  <input type="text" id="local" name="local" value="{{reuniao.local}}" required style="width:100%;margin-bottom:1rem;">

  <div style="text-align:center;margin-top:1.5rem;">
    <button type="submit">Salvar</button>
    <a href="/admin/reunioes" style="margin-left:1rem;">Voltar</a>
  </div>
</form>
